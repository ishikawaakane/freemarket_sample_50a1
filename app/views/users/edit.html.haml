= render './shared/profile_header';
-# = render './shared/gratel';
.bread-crumbs
  %ul
    %li
      - breadcrumb :edit_user
      = breadcrumbs separator: " &rsaquo; "

.main--l-container
  .main--l-container--l-containt
    %section.main--l-container--l-containt--l-chapter-container
      %section.l-chapter-container-mypage-identification
        %h2.l-chapter-head
          本人情報の登録
        %form.l-singe-inner{action: "", method: "POST", novalidate: ""} 
          .info-customer
            %p.info-customer-registration
              お客さまの本人情報をご登録ください。
              %br.info-customer-registration-necessary
                登録されたお名前・生年月日を変更する場合、本人確認書類の提出が必要になります。
      
            %p.text-right
              = link_to "#", class: "upload" do
                本人確認書類のアップロードについて＞

          .form-group
            %label.form-group--label
              お名前
            %p.form-group--p
              メルカリ太郎

          .form-group
            %label.form-group--label
              お名前カナ
            %p.form-group--p
              メルカリタロウ

          .form-group
            %label.form-group--label{for: "birthday"}
              生年月日
            %p.form-group--p
              219/05/11

          .form-group
            %label.form-group--label{for: "zip_code"}
              郵便番号
            %span.form-arbitrary
              任意
            %input.input-default{type: "text", value:"", name: "zip_code", placeholder: "例）1234567"}

          .form-group
            %label.form-group--label{for: "prefecture"}
              都道府県
            %span.form-arbitrary
              任意
            
            %select.select-wrap{name: "prefecture"}
              %option{value: ""} 
                - Prefecture.all.each do |prefecture|
                  %option{value: Prefecture.all}
                    = prefecture.name
              %i.icon-arrow-bottom

          .form-group
            %label.form-group--label{for: "city"}
              市区町村
            %span.form-arbitrary
              任意
            %input.input-default{type: "text", value: "", name: "city", placeholder: "例) 横浜市緑区"}

          .form-group
            %label.form-group--label{for: "address1_label"}
              番地
            %span.form-arbitrary
              任意
            %input.input-default{type: "text", value: "", name: "address1", placeholder: "例) 青山1−1−1"}

          .form-group
            %label.form-group--label{for: "address2_label"}
              建物名
            %span.form-arbitrary
              任意
            %input.input-default{type: "text", value: "", name: "address2", placeholder: "例) 柳ビル103"}

          %button.btn-default-btn-red{type: "submit"}
            登録する

          .form-group-text-right
            %p.form-group--p
              =link_to "#", class: "upload" do
                本人情報の登録について＞
                
          %input{type: "hidden", name: "__csrf_value", value: ""}

  = render './shared/sidebar';
= render './shared/footer';
= render './shared/footer-sell-btn';